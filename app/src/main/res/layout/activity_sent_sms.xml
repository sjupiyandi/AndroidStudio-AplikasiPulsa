<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pulsa"
    tools:context="com.latihan.sisco.pulsa.SentSMS">

    <Spinner
        android:id="@+id/spuser"
        android:layout_width="120dp"
        android:layout_height="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="220dp"
        android:background="#ddd"
        android:entries="@array/pulsa"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pulsa"
        android:textColor="#000"
        android:textSize="40sp"
        android:gravity="center"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />



    <EditText
        android:id="@+id/idTxtPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Tuliskan No Hp"
        android:background="#fff"
        android:inputType="phone"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_margin="20dp"
        android:background="#fff"
        android:entries="@array/pulsa"
        />

    <Button
        android:id="@+id/idbtnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Kirim SMS"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/idbtnTransaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Transaksi"
        android:layout_margin="20dp"
        />

</LinearLayout>
